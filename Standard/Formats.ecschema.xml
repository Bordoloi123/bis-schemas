<?xml version="1.0" encoding="utf-8"?>
<ECSchema schemaName="Formats" alias="f" version="01.00.00" description="Standard Set of Format definitions" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.2">
    <ECSchemaReference name="Units" version="1.0.0" alias="u"/>

    <Format typeName="SignedReal" displayLabel="realSign" type="decimal" precision="6" showSignOption="signAlways" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="ParensReal" displayLabel="realPth" type="decimal" precision="6" showSignOption="negativeParentheses" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="DefaultReal" displayLabel="real" type="decimal" precision="6" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="DefaultRealU" displayLabel="realu" type="decimal" precision="6" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel"/>
    <Format typeName="DefaultRealUNS" type="decimal" precision="6" uomSeparator="" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel"/>

    <Format typeName="SignedFractional" displayLabel="fract" type="fractional" precision="64" showSignOption="signAlways" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="Fractional" displayLabel="fract" type="fractional" precision="64" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="FractionalU" displayLabel="fractu" type="fractional" precision="64" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel"/>

    <Format typeName="Scientific" displayLabel="sci" type="scientific" scientificType="standard" precision="6" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="SignedScientific" displayLabel="sciSign" type="scientific" scientificType="standard" precision="6" showSignOption="signAlways" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="ScientificNormal" displayLabel="sciN" type="scientific" scientificType="normal" precision="6" formatTraits="keepSingleZero|keepDecimalPoint"/>

    <Format typeName="Station_100" type="station" precision="2" stationOffsetSize="2" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="StationU_100" type="station" precision="2" stationOffsetSize="2" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel"/>
    <Format typeName="StationUZ_100" type="station" precision="2" stationOffsetSize="2" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel|trailZeroes"/>
    <Format typeName="Station_1000" type="station" precision="2" stationOffsetSize="3" formatTraits="keepSingleZero|keepDecimalPoint"/>
    <Format typeName="StationU_1000" type="station" precision="2" stationOffsetSize="3" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel"/>

    <!--
    TODO: Need Stop100-2-2z,
         Stop100-2-4,
         Stop100-2-4u,
         Stop1000-2-3z,
         Stop1000-2-4,
         Stop1000-2-4u
    -->

    <!-- Needs a minWidth of 2 -->
    <Format typeName="StationFt2" type="station" precision="2" stationOffsetSize="2" uomSeparator="" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:FT">
            <Unit label="'">u:FT</Unit>
        </Composite>
    </Format>
    
    <!-- Needs a minWidth of 4 -->
    <Format typeName="StationM4" type="station" precision="2" stationOffsetSize="3" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:M">
            <Unit label="m">u:M</Unit>
        </Composite>
    </Format>

    <Format typeName="AngleDMS" displayLabel="dms" type="fractional" precision="1" formatTraits="keepSingleZero|keepDecimalPoint">
        <Composite inputUnit="u:ARC_DEG">
            <Unit label="\xC2\xB0">u:ARC_DEG</Unit>
            <Unit label="'">u:ARC_MINUTE</Unit>
            <Unit label="&quot;">u:ARC_SECOND</Unit>
        </Composite>
    </Format>

    <Format typeName="AngleDM" displayLabel="dm" type="fractional" precision="8" formatTraits="keepSingleZero|keepDecimalPoint">
        <Composite inputUnit="u:ARC_DEG">
            <Unit label="\xC2\xB0">u:ARC_DEG</Unit>
            <Unit label="'">u:ARC_MINUTE</Unit>
        </Composite>
    </Format>

    <Format typeName="AmerMYFI" displayLabel="myfi" type="fractional" precision="4" formatTraits="keepSingleZero|keepDecimalPoint">
        <Composite inputUnit="u:Mile">
            <Unit label="mile(s)">u:MILE</Unit>
            <Unit label="yrd(s)">u:YRD</Unit>
            <Unit label="'">u:FT</Unit>
            <Unit label="&quot;">u:IN</Unit>
        </Composite>
    </Format>

    <Format typeName="AmerFI" displayLabel="fi" type="fractional" precision="8" formatTraits="keepSingleZero|keepDecimalPoint">
        <Composite inputUnit="u:FT">
            <Unit label="'">u:FT</Unit>
            <Unit label="&quot;">u:IN</Unit>
        </Composite>
    </Format>

    <Format typeName="AmerYFI" displayLabel="yfi" type="fractional" precision="8" formatTraits="keepSingleZero|keepDecimalPoint">
        <Composite inputUnit="u:YRD">
            <Unit label="yrd(s)">u:YRD</Unit>
            <Unit label="'">u:FT</Unit>
            <Unit label="&quot;">u:IN</Unit>
        </Composite>
    </Format>

    <Format typeName="Meters4U" type="decimal" precision="4" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:M">
            <Unit label="m">u:M</Unit>
        </Composite>
    </Format>

    <Format typeName="Feet4U" type="decimal" precision="4" uomSeparator="" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:FT">
            <Unit label="'">u:FT</Unit>
        </Composite>
    </Format>

    <Format typeName="InchesU" type="decimal" precision="4" uomSeparator="" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:IN">
            <Unit label="&quot;">u:IN</Unit>
        </Composite>
    </Format>

    <Format typeName="DecimalDeg4" type="decimal" precision="4" uomSeparator="" formatTraits="keepSingleZero|keepDecimalPoint|showUnitLabel">
        <Composite inputUnit="u:ARC_DEG">
            <Unit label="\xC2\xB0">u:ARC_DEG</Unit>
        </Composite>
    </Format>

    <Format typeName="HMS" type="decimal" precision="2">
        <Composite inputUnit="u:HR">
            <Unit label="hour(s)">u:HR</Unit>
            <Unit label="min">u:MIN</Unit>
            <Unit label="sec">u:S</Unit>
        </Composite>
    </Format>
</ECSchema>